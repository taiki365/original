  <body>
    <%= yield %>
  </body>
  
  <footer>
  <div class="top-footer"> 
    <div class="footer-name">@ty 2021-2022</div>
    <div><%=link_to 'TOP', root_path, class:"btn btn--green" %></div>
  </div>
  </footer>
