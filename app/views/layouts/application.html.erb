            <div class="nav__right">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn--brown" %>
            </div>
          <% else %>
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class:"btn btn--beige" %>
              <%= link_to "新規登録", new_user_registration_path, class:"btn btn--greenyellow" %>
            </div>
          <% end %>
        </div>    
    </header>
