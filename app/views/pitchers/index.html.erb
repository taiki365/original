
    <main class="">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">投手成績</h1>
      </div>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>選手名</th>
              <th>勝利</th>
              <th>敗北</th>
              <th>被安打</th>
              <th>防御率</th>
              <th>失点</th>
              <th>被本塁打</th>
              <th>与四球</th>
              <th>与死球</th>
              <th>投球回</th>
              <th>被打率</th>
              <th>被出塁率</th>
              <th>qs</th>
              <th>被長打率</th>
              <th>被OPS</th>
              <th>LOB%</th>
              <th>BB/9</th>
              <th>HR/9</th>
              <th>WHIP</th>
            </tr>
          </thead>
          <% @pitcher.each do |p| %>
          <tbody>
       
            <tr>
              <td><%= p.pitcher_name %></td>
              <td><%= p.win %></td>
              <td><%= p.lose %></td>
              <td><%= p.damage_hit %></td>
              <td><%= p.defense %></td>
              <td><%= p.conceded %></td>
              <td><%= p.damage_homerun %></td>
              <td><%= p.gave_walks %></td>
              <td><%= p.gave_dead_ball %></td>
              <td><%= p.inning %></td>
              <td><%= p.damage_batting_average %></td>
              <td><%= p.damage_base_percentage %></td>
              <td><%= p.qs %></td>
              <td><%= p.damage_slugging_percentage %></td>
              <td><%= p.damage_ops %></td>
              <td><%= p.lob %>%</td>
              <td><%= p.bb9 %></td>
              <td><%= p.hr9 %></td>
              <td><%= p.whip %></td>
              <td><%=link_to '詳細', "/pitchers/#{p.id}" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    <% if user_signed_in? && current_user.admin? %>
      <%=link_to '新規データ入力', new_pitcher_path, class:"back-btn" %>
      <%=link_to 'TOP', root_path, class:"back-btn" %>
    <% end %>
    </main>
  </div>
</div>


  </body>
</html>
