  <body>
    
<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
  
</header>


  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">チーム成績</h1>
      </div>
  
      <h2>Section title</h2>
      <div class="table-responsive"> 
          <table class="table table-striped table-sm">
        <thead>
            <tr>
          <tbody>
            <tr>
              <td><%= @team.team_name.name %></td>
              <td><%= @team.game_number %></td>
              <td><%= @team.team_win %></td>
              <td><%= @team.team_lose %></td>
              <td><%= @team.draw %></td>
              <td><%= @team.win_rate %></td>
              <%# <td><%= t. </td>%>
              <td><%= @team.team_defense %></td>
              <td><%= @team.team_batting_average %></td>
              <td><%= @team.team_homerun %></td>
              <td><%= @team.team_steal %></td>
              <td><%= @team.team_runs %></td>
              <td><%= @team.tema_conceded %></td>
            </tr>
          </tbody>
            </tr>
        </thead>
        </table>
      <% if user_signed_in? && current_user.admin? %>
        <%=link_to '編集', edit_team_path, method: :get %>
        <%=link_to '削除', "/teams/#{@team.id}", method: :delete %>
        <%=link_to 'TOP', root_path, class:"back-btn" %>
      <% end %>
      </div>
    </main>


  </body>
</html>