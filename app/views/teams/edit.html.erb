<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.79.0">
    <title>Dashboard Template · Bootstrap v5.0</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/dashboard/">

    

  </head>
  <body>
    
<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
  
</header>


  

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">チーム成績</h1>
      </div>
  
      <h2>Section title</h2>
      <div class="table-responsive"> 
        <%= form_with model:@team, local: true do |f| %>
          <table class="table table-striped table-sm">
        <thead>
            <tr>
              <th><%= f.collection_select(:team_name_id, TeamName.all, :id, :name, {}, {class:"select-box", id:""}) %></th>
              <th><%= f.number_field :game_number,  id:"", placeholder:"試合数" %></th>
              <th><%= f.number_field :team_win, id:"", placeholder:"勝利"%></th>
              <th><%= f.number_field :team_lose,  id:"", placeholder:"敗北" %></th>
              <th><%= f.number_field :draw,  id:"", placeholder:"引き分け" %></th>
              <th><%= f.number_field :win_rate,  id:"", placeholder:"勝率" %></th>
              <th><%= f.number_field :win_rate_difference, id:"", placeholder:"勝率差"%></th>
              <th><%= f.number_field :team_defense, step: "0.01", id:"", placeholder:"防御率" %></th>
              <th><%= f.number_field :team_batting_average, step: "0.01", id:"", placeholder:"打率" %></th>
              <th><%= f.number_field :team_homerun,  id:"", placeholder:"本塁打" %></th>
              <th><%= f.number_field :team_steal,  id:"", placeholder:"盗塁" %></th>
              <th><%= f.number_field :team_runs,  id:"", placeholder:"得点" %></th>
              <th><%= f.number_field :tema_conceded,  id:"", placeholder:"失点" %></th>
            </tr> 
            
        </thead>
        </table>
        <%= f.submit "登録する" ,class:"sell-btn" %>
        <% end %>
      </div>
      <%=link_to 'TOP', root_path, class:"back-btn" %>
    </main>


  </body>
</html>